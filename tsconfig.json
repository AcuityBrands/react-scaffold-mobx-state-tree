{
  "compilerOptions": {
    "jsx": "preserve", // preserve jsx formatting - let Babel handle it
    "moduleResolution": "node", // resolve modules as node modules
    "module": "esnext", // leave imports as they are
    "target": "esnext", // do not transpile stuff like classes, async/await, ...
    "sourceMap": true, // produce a source map
    "experimentalDecorators": true // allow decorators
  }
}